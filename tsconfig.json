{
	"extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"lib": ["esnext"],
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": "src",
		"paths": {
			"@/*": ["src/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
